@model SwissMetroCookware.Models.Order

@{
    ViewBag.Title = "Details";
}


<div class="page-header">
    <div class="page-header-title">
        <h4>Order</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Details</h5>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <table class="table table-borderless">
                        <tr>
                            <td style="font-weight:bold;">
                                Customer Name:
                            </td>
                            <td>@Html.DisplayFor(model => model.Customer.name)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Date:
                            </td>
                            <td>@Html.DisplayFor(model => model.date)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Payment Mode:
                            </td>
                            <td>@Html.DisplayFor(model => model.payment_type)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Address:
                            </td>
                            <td>@Html.DisplayFor(model => model.address)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Province:
                            </td>
                            <td>@Html.DisplayFor(model => model.province)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Phone Number:
                            </td>
                            <td>@Html.DisplayFor(model => model.contact)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Email Address:
                            </td>
                            <td>@Html.DisplayFor(model => model.email)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Status:
                            </td>
                            <td>@Html.DisplayFor(model => model.status)</td>
                        </tr>


                    </table>

                    <p>
                        <a class="btn btn-primary" href="@Url.Action("Edit" , "Orders" , new {id = Model.id})">Edit</a>
                        <a class="btn btn-primary" href="@Url.Action("Index" , "Orders")">Back</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
