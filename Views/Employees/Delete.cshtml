@model SwissMetroCookware.Models.Employee

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";

    ViewBag.Title = "Delete";
}

<div class="page-header">
    <div class="page-header-title">
        <h4>Employees</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Delete</h5>
                    <span>Are you sure you want to delete this employee?</span>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <table class="table table-borderless">
                        <tr>
                            <td style="font-weight:bold;">
                                Name:
                            </td>
                            <td>@Html.DisplayFor(model => model.name)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Gender:
                            </td>
                            <td>@Html.DisplayFor(model => model.gender)</td>
                        </tr>

                        <tr>
                            <td style="font-weight:bold;">
                                Address:
                            </td>
                            <td>@Html.DisplayFor(model => model.address)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Email Address:
                            </td>
                            <td>@Html.DisplayFor(model => model.email)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Phone Number:
                            </td>
                            <td>@Html.DisplayFor(model => model.contact)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">Picture: </td>
                            <td>@Html.DisplayFor(model => model.picture)</td>
                            <img height="50px" width="70px" src="@Url.Content(Model.picture)" />
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">Salary: </td>
                            <td>@Html.DisplayFor(model => model.salary)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">Designation: </td>
                            <td>@Html.DisplayFor(model => model.designation)</td>
                        </tr>
                    </table>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-primary" href="@Url.Action("Index" , "Employees")">Back</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>