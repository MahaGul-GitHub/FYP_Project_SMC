                                                                <h4><a href="shop-product-right.html">@item.name</a></h4>
                                                                <h4>
                                                                    <span>@item.quan × </span>

                                                                    @if (item.sale_percent != "0" && item.sale_percent != null)
                                                                    {
                                                                        int old_price = Convert.ToInt32(item.sale_price);
                                                                        int s_percent = Convert.ToInt32(item.sale_percent);
                                                                        int discount = (old_price * s_percent) / 100;
                                                                        price = old_price - discount;
                                                                    }
                                                                    else
                                                                    {
                                                                        price = Convert.ToInt32(item.sale_price);
                                                                    }
                                                                    <span>Rs. @price</span>
                                                                    @{totall = (item.quan * price);
                                                                    }
                                                                </h4>
                                                            </div>
