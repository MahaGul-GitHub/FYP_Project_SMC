                                                        <li>
                                                            <div class="shopping-cart-img">
                                                                <a href="@Url.Action("SingleProduct", "Home", new { id = item.id })"><img alt="Evara" src="@Url.Content(item.picture)" height="70px" width="90px"></a>
                                                            </div>
