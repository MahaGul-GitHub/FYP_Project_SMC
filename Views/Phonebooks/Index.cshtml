@model IEnumerable<SwissMetroCookware.Models.Phonebook>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<div class="page-header">
    <div class="page-header-title">
        <h4>Phonebook</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Contacts List</h5>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <table class="table table-bordered table-hover table-styling">
                        <tr class="table-primary">
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Contact
                            </th>
                            <th>
                                Company
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.notes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.company)
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Edit" , "Phonebooks" , new {id = item.id})"><i class="icofont icofont-edit-alt"></i></a>
                                    <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Details" , "Phonebooks" , new {id = item.id})"><i class="icofont icofont-info"></i></a>
                                    <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Delete" , "Phonebooks" , new {id = item.id})"><i class="icofont icofont-trash"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                    <a class="btn btn-primary" href="@Url.Action("Create" , "Phonebooks")">Add New</a>

                </div>
            </div>
        </div>
    </div>
</div>

