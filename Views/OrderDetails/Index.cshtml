@model IEnumerable<SwissMetroCookware.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    int count = 1;
}

<div class="page-header">
    <div class="page-header-title">
        <h4>Order Details</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Order Details List</h5>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <table class="table table-bordered table-hover table-styling">
                        <tr class="table-primary">
                            <th width="20px">
                                Sr#
                            </th>

                            <th>
                                Name
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Sale Price
                            </th>
                            <th>
                                Feedback Status
                            </th>
                            <th>
                                
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.name)
                        </td>
                        <td>
                            <center><img src="@Url.Content(item.Product.picture)" height="110px" width="130px" /></center>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sale_price)
                        </td>
                        <td>
                            @item.feedback_status
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Edit" , "OrderDetails" , new {id = item.id})"><i class="icofont icofont-edit-alt"></i></a>
                            <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Details" , "OrderDetails" , new {id = item.id})"><i class="icofont icofont-info-circle"></i></a>
                            <a class="btn btn-primary btn-sm btn-outline" href="@Url.Action("Delete" , "OrderDetails" , new {id = item.id})"><i class="icofont icofont-trash"></i></a>
                        </td>
                    </tr>
                    count++;
                        }
                        
                    </table>

                    <a class="btn btn-primary" href="@Url.Action("Create" , "OrderDetails")">Add New</a>

                </div>
            </div>
        </div>
    </div>
</div>

