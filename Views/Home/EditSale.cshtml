@using SwissMetroCookware.Models
@{
    ViewBag.Title = "EditSale";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Sale s = ViewBag.sale;
}

<div class="page-header">
    <div class="page-header-title">
        <h4>Manage Sale</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Sale</h5>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">


                    @using (Html.BeginForm("EditSale" , "Home"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                      
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => s.id)

                            <div class="form-group">
                                Sale Title:
                                <div class="col-md-10">
                                    @Html.EditorFor(model => s.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => s.name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Sale Pecentage:
                                <div class="col-md-10">
                                    @Html.EditorFor(model => s.percentage, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => s.percentage, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


