@model SwissMetroCookware.Models.Product

@{
    ViewBag.Title = "Delete";
}


<div class="page-header">
    <div class="page-header-title">
        <h4>Poduct</h4>
    </div>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Delete</h5>
                    <span>Are you sure you want to delete this product?</span>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <table class="table table-borderless">
                        <tr>
                            <td style="font-weight:bold;">
                                Name:
                            </td>
                            <td>@Html.DisplayFor(model => model.name)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Description:
                            </td>
                            <td>@Html.DisplayFor(model => model.description)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Sub Category:
                            </td>
                            <td>@Html.DisplayFor(model => model.SubCategory.name)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Cost Price:
                            </td>
                            <td>@Html.DisplayFor(model => model.cost_price)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Sale Price:
                            </td>
                            <td>@Html.DisplayFor(model => model.sale_price)</td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">
                                Featured:
                            </td>
                            <td>@Html.DisplayFor(model => model.featured_product)</td>
                        </tr>
                        
                        <tr>
                            <td style="font-weight:bold;">
                                Sale Percentage:
                            </td>
                            <td>@Html.DisplayFor(model => model.sale_percent)</td>
                        </tr>
                        
                        <tr>
                            <td style="font-weight:bold;">
                                Picture:
                            </td>
                            <td>
                                <img height="80px" width="130px" src="@Url.Content(Model.picture)" />
                            </td>

                        </tr>

                    </table>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-primary" href="@Url.Action("Index" , "Products")">Back</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

